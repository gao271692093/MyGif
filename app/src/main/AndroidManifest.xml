<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glg.mygif">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.BaseActivity"></activity>
        <activity android:name=".activity.VideoDetailsActivity" android:launchMode="singleTop" />
        <activity android:name=".activity.ImageDetailsActivity" android:launchMode="singleTop" />
        <activity
            android:name=".activity.EditPersonalIntroductionActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.GifActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.PublishActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.SearchActivity"
            android:launchMode="singleTop"
            android:theme="@style/SearchActivity" />
        <activity
            android:name=".activity.FruitActivity"
            android:launchMode="singleTop"
            android:theme="@style/FruitActivityTheme" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="MyGif.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>

</manifest>